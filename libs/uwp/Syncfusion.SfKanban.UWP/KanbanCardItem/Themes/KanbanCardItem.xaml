<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Syncfusion.UI.Xaml.Kanban">

    <Style TargetType="local:KanbanCardItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:KanbanCardItem">
                    <Grid x:Name="KanbanCard_Grid">
                        <ContentPresenter Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

