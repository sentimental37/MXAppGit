                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:Syncfusion.UI.Xaml.Grid">

    <local:VisiblityConverter x:Key="VisiblityConverter" />
    <local:BoolToVisiblityConverter x:Key="boolToVisiblityConverter" />
    <local:TextVisibilityConverter x:Key="textBlockVisibilityConverter" />
    <local:ReverseVisibilityConverter x:Key="reverseVisibilityConverter" />
    <local:ItemsSourceCountConverter x:Key="itemsSourceCountConverter" />
    <local:LoadingVisiblityConverter x:Key="progressRingVisiblityConverter" />
    <local:ListItemsVisiblityConverter x:Key="listItemsVisiblityConverter" />
    <local:SortBorderBackgroundConverter x:Key="sortBorderBackgroundConverter" />
    <local:HeightToMarginConverter x:Key="heightToMarginConverter" />
